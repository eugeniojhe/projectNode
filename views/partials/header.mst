<html>
    <head>
      {{#pageTitle}} {{! If }}
      <title>{{pageTitle}}</title>
      {{/pageTitle}}{{! end if}}
      {{^pageTitle}}{{!else}}
      <title>{{h.standardTitle}}</title>
      {{/pageTitle}}{{!end else}}
      <link rel="stylesheet" href="/assets/css/style.css">
    </head>
    <body>
      <header>
        <h1>Cabecalho</h1>
        <ul>
            {{#h.menu}}
            <li><a href="{{slug}}">{{name}}</a></li>
            {{/h.menu}}
        </ul>
      </header> 

        {{#flashes}}
            {{#success}}
              <div class="success"><h1>{{.}}</h1></div>
            {{/success}}
            {{#info}}
              <div class="info"><h1>{{.}}</h1></div>
            {{/info}}
            {{#error}}
              <div class="error"><h1>{{.}}</h1></div>
            {{/error}}
        {{/flashes}}
    </body>
</html>